<% layout('layouts/boilerplate') %>

<div id="map" style="width: 100%; height: 500px"></div>

<h1>All Parks</h1>

<% for(let park of parks) { %>
<div class="card">
  <div class="row">
    <div class="col-md-4">
      <% if(park.images.length) { %>
      <img class="img-fluid" alt="" src="<%= park.images[0].url %>" />
      <% } else {%>
      <img
        class="img-fluid"
        alt=""
        src="https://res.cloudinary.com/dkwnbkb3y/image/upload/v1719016274/ParkFinder/eqphqzltakon7wwkteu6.png"
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= park.title %></h5>
        <p class="card-text"><%= park.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= park.location %></small>
        </p>
        <a class="btn btn-primary" href="/parks/<%=park._id%>"
          >View <%= park.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const parks = {features: <%- JSON.stringify(parks) %>};
</script>
<link
  href="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.css"
  rel="stylesheet"
/>
<script src="https://api.mapbox.com/mapbox-gl-js/v3.4.0/mapbox-gl.js"></script>
<script src="/javascripts/clusterMap.js"></script>
